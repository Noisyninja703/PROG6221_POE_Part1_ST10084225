<Page x:Class="PROG6221_POE_Draft2.BudgetReport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PROG6221_POE_Draft2"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1080"
      Title="BudgetReport"
      Background="Transparent">

    <Grid>
        <Grid.ColumnDefinitions>
   
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="480"/>
            <ColumnDefinition Width="300"/>

        </Grid.ColumnDefinitions>

        <!--Report Button-->
        <Button Grid.Column="2"  Width="100" Height="50" Content="report" FontSize="22" Click="Button_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="25" Style="{StaticResource ButtonsTheme}"/>
        
        <!--Stack Panel To Hold TextBox-->
        <StackPanel Grid.Column="1" x:Name="ReportDisplayPanel" Width="auto" Height="720">

         <!--RichTextBox-->
            <RichTextBox x:Name="richTextDisplay" Width="auto" Height="720" VerticalScrollBarVisibility="Visible" Background="Transparent" Foreground="White"></RichTextBox>
            
        </StackPanel>

        <!--<StackPanel x:Name="BudgetImagesStack" Height="720" Width="Auto"  Grid.ColumnSpan="3">
            <Image x:Name="Well"  Source="/Images/GreatSurplusAmount.png"
                               Height="64" Width="64"/>


        </StackPanel>-->
        
    </Grid> 
</Page>

